# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_SHUTDOWN_TIMEOUT=30s
FRONTEND_URL=http://localhost:5173

# Database Configuration
DB_DRIVER=sqlite
DB_PATH=./data.db

# For PostgreSQL (optional)
# DB_DRIVER=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=infraudit
# DB_USER=infraudit
# DB_PASSWORD=changeme
# DB_SSLMODE=disable
# DB_MAX_OPEN_CONNS=25
# DB_MAX_IDLE_CONNS=5
# DB_CONN_MAX_LIFETIME=5m

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h
SESSION_SECRET=your-session-secret-change-this

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://localhost:8080/api/auth/google/callback

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URL=http://localhost:8080/api/auth/github/callback

# Redis Configuration (optional)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Cloud Provider Integration Keys
OPENAI_API_KEY=your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_CHANNEL=#alerts
STRIPE_API_KEY=your-stripe-api-key

# Security Configuration
BCRYPT_COST=12

# ================================
# Phase 5: Automation & Orchestration
# ================================

# Job Scheduler Configuration
ENABLE_SCHEDULER=true
DEFAULT_RESOURCE_SYNC_CRON=0 */6 * * *
DEFAULT_DRIFT_DETECTION_CRON=0 */4 * * *
DEFAULT_VULNERABILITY_SCAN_CRON=0 2 * * *
DEFAULT_COST_SYNC_CRON=0 1 * * *
DEFAULT_COMPLIANCE_CRON=0 3 * * 0

# ================================
# Phase 6: Notifications & Integrations
# ================================

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@infraaudit.com
EMAIL_FROM_NAME=InfraAudit

# Email Configuration (SMTP - alternative to SendGrid)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=true

# GitHub Integration (for IaC PR remediation)
GITHUB_TOKEN=your-github-personal-access-token

# GitLab Integration (for IaC PR remediation)
GITLAB_TOKEN=your-gitlab-personal-access-token
